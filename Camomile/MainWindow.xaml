<Window x:Class="Camomile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Camomile"
        mc:Ignorable="d"
        Title="Ромашка и Партнеры" Height="300" Width="750">
    <Grid Background="#FF070525">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="CompanyColumn" Grid.Column="0">
            <ListView HorizontalAlignment="Stretch" Height="150" Margin="10" VerticalAlignment="Top" Background="Gainsboro" 
                  ItemsSource="{Binding Companies}"
                 SelectedItem="{Binding SelectedCompany, Mode=TwoWay}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" Header="Company Name" DisplayMemberBinding="{Binding Path=Name}" />
                        <GridViewColumn Width="Auto" Header="Contract Status" DisplayMemberBinding="{Binding Path=ContractStatus}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel DataContext="{Binding SelectedCompany}" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox HorizontalAlignment="Stretch" Height="20" MinWidth="75" MaxWidth="125"  Margin="10" TextWrapping="Wrap" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="Auto"/>
                <TextBox HorizontalAlignment="Stretch" Height="20" MinWidth="75" MaxWidth="125"  Margin="10" TextWrapping="Wrap" Text="{Binding ContractStatus, UpdateSourceTrigger=PropertyChanged}" Width="Auto"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Добавить" Margin="10"/>
                <Button Content="Редактировать" Margin="10"/>
                <Button Content="Удалить" Margin="10"/>
            </StackPanel>
        </StackPanel>
        <StackPanel x:Name="UserColumn" Grid.Column="1">
            <ListView HorizontalAlignment="Stretch" Height="150" Margin="10" VerticalAlignment="Top" Background="Gainsboro" 
                  ItemsSource="{Binding Users}"
                 SelectedItem="{Binding SelectedUser, Mode=TwoWay}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" Header="User Name" DisplayMemberBinding="{Binding Path=Name}" />
                        <GridViewColumn Width="Auto" Header="Login" DisplayMemberBinding="{Binding Path=Login}" />
                        <GridViewColumn Width="Auto" Header="Password" DisplayMemberBinding="{Binding Path=Password}" />
                        <GridViewColumn Width="Auto" Header="Company ID" DisplayMemberBinding="{Binding Path=CompanyId}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel DataContext="{Binding SelectedUser}" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox HorizontalAlignment="Stretch" Height="20" MinWidth="75" MaxWidth="125"  Margin="10" TextWrapping="Wrap" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="Auto"/>
                <TextBox HorizontalAlignment="Stretch" Height="20" MinWidth="75" MaxWidth="125"  Margin="10" TextWrapping="Wrap" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" Width="Auto"/>
                <TextBox HorizontalAlignment="Stretch" Height="20" MinWidth="75" MaxWidth="125"  Margin="10" TextWrapping="Wrap" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Width="Auto"/>
                <TextBox HorizontalAlignment="Stretch" Height="20" MinWidth="75" MaxWidth="125"  Margin="10" TextWrapping="Wrap" Text="{Binding CompanyId, UpdateSourceTrigger=PropertyChanged}" Width="Auto"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Command="{Binding AddUserCommand}" Content="Добавить" Margin="10"/>
                <Button Command="{Binding EditUserCommand}" Content="Редактировать" Margin="10"/>
                <Button Command="{Binding DeleteUserCommand}" Content="Удалить" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
